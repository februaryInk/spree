.container
  .row
    %nav.col-md-12
      #main-nav-bar.navbar
        %ul.nav.nav-pills
          %li.nav-item
            = link_to Spree.t(:home), spree.root_path, class: 'nav-link'
          %li.nav-item.dropdown
            = link_to spree.products_path, class: 'dropdown-toggle nav-link', 'data-toggle': 'dropdown', role: 'button', 'aria-haspopup': 'true', 'aria-expanded': 'false' do
              Products
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to 'All Products', spree.products_path, class: 'dropdown-item'
              %li.divider{:role => "separator"}
              - Spree::Product.order('name asc').each do |product|
                %li
                  = link_to product.name, spree.product_path(product), class: 'dropdown-item'
          %li
            = link_to 'Sizes and Prices', spree.sizes_and_prices_path, class: 'nav-link'
          %li
            = link_to 'Artwork Gallery', spree.collections_path, class: 'nav-link'
          %li
            = link_to 'Contact Us', spree.contact_us_path, class: 'nav-link'
