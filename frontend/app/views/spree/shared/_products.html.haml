- content_for :head do
  - if products.respond_to?(:total_pages)
    = rel_next_prev_link_tags products
%div{"data-hook" => "products_search_results_heading"}
  - if products.empty?
    %div{"data-hook" => "products_search_results_heading_no_results_found"}
      = Spree.t(:no_products_found)
  - elsif params.key?(:keywords)
    %div{"data-hook" => "products_search_results_heading_results_found"}
      %h6.search-results-title= Spree.t(:search_results, keywords: h(params[:keywords]))
- if products.any?
  #products.row{"data-hook" => ""}
    - products.order('name asc').each do |product|
      - if product.images.any?
        - url = spree.product_path(product, taxon_id: @taxon.try(:id))
        .col-md-4.col-sm-6.col-xs-6.product-list-item{"data-hook" => "products_list_item", :id => "product_#{product.id}", :itemscope => "", :itemtype => "https://schema.org/Product"}
          .panel.panel-default
            - cache(@taxon.present? ? [I18n.locale, current_currency, @taxon, product] : cache_key_for_product(product)) do
              = link_to url, itemprop: "url" do
                .product-body
                  .product-image-fixed-height{:style => "background-image: url(#{product.images.first ? product.images.first.attachment.url(:large) : image_url('noimage/product.png')});"}
                .panel-footer.text-center
                  = content_tag(:span, truncate(product.name, length: 50), class: 'info lead', itemprop: "name", title: product.name)
    - reset_cycle("classes")
- if products.respond_to?(:total_pages)
  = paginate products, theme: 'twitter-bootstrap-3'
