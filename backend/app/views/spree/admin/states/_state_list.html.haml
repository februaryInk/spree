#new_state{"data-hook" => ""}
%table#listing_states.table{"data-hook" => ""}
  %thead
    %tr{"data-hook" => "states_header"}
      %th= Spree.t(:name)
      %th.text-center= Spree.t(:abbreviation)
      %th.actions
  %tbody
    - @states.each do |state|
      %tr{"data-hook" => "states_row", :id => "#{spree_dom_id state}"}
        %td= state.name
        %td.text-center= state.abbr
        %td.actions.actions-2.text-right
          = link_to_edit(state, no_text: true) if can? :edit, state
          = link_to_delete(state, no_text: true) if can? :delete, state
    - if @states.empty?
      %tr
        %td{:colspan => "3"}= Spree.t(:none)
