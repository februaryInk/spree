- content_for :page_title do
  = plural_resource_name(Spree::Prototype)
- content_for :page_actions do
  = button_link_to Spree.t(:new_prototype), new_object_url, { class: "btn-success", icon: 'add', 'data-update' => 'new_prototype', id: 'new_prototype_link'}
- if @prototypes.any?
  %table#listing_prototypes.table{"data-hook" => ""}
    %thead
      %tr{"data-hook" => "prototypes_header"}
        %th= Spree.t(:name)
        %th.actions
    %tbody
      - @prototypes.each do |prototype|
        %tr{"data-hook" => "prototypes_row", :id => "#{spree_dom_id prototype}"}
          %td= prototype.name
          %td.actions.actions-2.text-right
            = link_to_edit(prototype, no_text: true, class: 'admin_edit_prototype')
            = link_to_delete(prototype, no_text: true)
- else
  .alert.alert-info.no-objects-found
    = Spree.t(:no_resource_found, resource: plural_resource_name(Spree::Prototype))
    ,
    \#{link_to Spree.t(:add_one), new_object_url}!
