%tr.option_value.fields{"data-hook" => "option_value", :id => "spree_#{dom_id(f.object)}"}
  %td.move-handle.text-center
    %span.icon.icon-move.handle
    = f.hidden_field :id
  %td.name= f.text_field :name, class: "form-control"
  %td.presentation= f.text_field :presentation, class: "form-control"
  %td.actions.actions-1.text-center= link_to_icon_remove_fields f
