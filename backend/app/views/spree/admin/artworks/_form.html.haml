%div
  = f.field_container :code, class: ['form-group'] do
    = f.label :code, Spree.t(:code)
    %span.required *
    %br/
    = f.text_field :code, class: 'form-control'
    = f.error_message_on :code
  = f.field_container :complexity, class: ['form-group'] do
    = f.label :complexity
    %br
    = f.number_field :complexity, class: 'form-control', min: 1, value: 1
    = f.error_message_on :complexity
  = f.field_container :description, class: ['form-group'] do
    = f.label :description, Spree.t(:description)
    %br/
    = f.text_area :description, class: 'form-control'
    = f.error_message_on :description
  #collections
    = f.field_container :collection_ids, class: ['form-group'] do
      = f.label :collection_ids, 'Collections'
      %br
      = f.select :collection_ids, Spree::Collection.all.order(:name).map { |c| [c.name, c.id] }, {  }, { class: 'select2', multiple: true }
  #image
    = f.fields_for :image, f.object.image || f.object.build_image do |ff|
      .form-group{"data-hook" => "file"}
        = ff.label :attachment, Spree.t(:filename)
        = ff.file_field :attachment
