- content_for :page_title do
  = link_to Spree.t(:stock_locations), spree.admin_stock_locations_path
  \/
  \#{Spree.t(:stock_movements_for_stock_location, stock_location_name: @stock_location.name)}
- content_for :page_actions do
  = button_link_to Spree.t(:new_stock_movement), new_admin_stock_location_stock_movement_path(@stock_location), icon: 'add', class: 'btn-success', id: 'admin_new_stock_movement_link'
- if @stock_movements.any?
  %table#listing_stock_movements.table
    %colgroup
      %col{:style => "width: 35%"}/
      %col{:style => "width: 20%"}/
      %col{:style => "width: 45%"}/
    %thead
      %tr{"data-hook" => "admin_stock_movements_index_headers"}
        %th
          = Spree.t(:stock_item)
        %th= Spree.t(:quantity)
        %th= Spree.t(:action)
    %tbody
      - @stock_movements.each do |stock_movement|
        %tr{"data-hook" => "admin_stock_movements_index_rows", :id => "#{spree_dom_id stock_movement}"}
          %td
            = display_variant(stock_movement)
          %td= stock_movement.quantity
          %td= pretty_originator(stock_movement)
- else
  .alert.alert-info.no-objects-found
    = Spree.t(:no_resource_found, resource: plural_resource_name(Spree::StockMovement))
    ,
    \#{link_to Spree.t(:add_one), spree.new_admin_stock_location_stock_movement_path(@stock_location)}!
= paginate @stock_movements
