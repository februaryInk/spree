%div{"data-hook" => "admin_named_type_form_fields"}
  = f.field_container :name, class: ['form-group'] do
    = f.label :name, Spree.t(:name)
    %span.required *
    = f.text_field :name, class: 'form-control'
    = f.error_message_on :name
  .checkbox
    = label_tag :active do
      = f.check_box :active
      = Spree.t(:active)
