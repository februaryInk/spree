%div
  = f.field_container :name, class: ['form-group'] do
    = f.label :name, Spree.t(:name)
    %span.required *
    %br
    = f.text_field :name, class: 'form-control'
    = f.error_message_on :name
  = f.field_container :presentation, class: ['form-group'] do
    = f.label :presentation
    %span.required *
    %br
    = f.text_field :presentation, class: 'form-control'
    = f.error_message_on :presentation
  = f.field_container :value_type, class: ['form-group'] do
    = f.label :value_type
    %span.required *
    %br
    = f.select :value_type, ['select', 'string', 'text'], {}, class: 'form-control'
    = f.error_message_on :value_type
