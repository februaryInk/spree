%table#listing_taxonomies.table.sortable{"data-hook" => "", "data-sortable-link" => update_positions_admin_taxonomies_url}
  %thead
    %tr{"data-hook" => "taxonomies_header"}
      %th.no-border
      %th= Spree.t(:name)
      %th.actions
  %tbody
    - @taxonomies.each do |taxonomy|
      %tr{"data-hook" => "taxonomies_row", :id => "#{spree_dom_id taxonomy}"}
        %td.move-handle
          %span.icon.icon-sort.handle
        %td= taxonomy.name
        %td.actions.actions-2.text-right
          = link_to_edit taxonomy.id, no_text: true
          = link_to_delete taxonomy, no_text: true
